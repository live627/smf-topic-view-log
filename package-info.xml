<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<name>Topic View Log</name>
	<id>[SiNaN]:TopicLog</id>
	<version>1.2</version>
	<type>modification</type>

	<install for="1.1.0 - 1.99.99">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<modification format="xml" type="file">install1.xml</modification>
		<modification format="xml" type="file">languages.xml</modification>
		<require-file name="TopicLog.php" destination="$sourcedir" />
		<require-file name="TopicLog.template.php" destination="$themedir" />
		<code type="file">install1.php</code>
	</install>

	<uninstall for="1.1.0 - 1.99.99">
		<modification format="xml" type="file" reverse="true">install1.xml</modification>
		<modification format="xml" type="file" reverse="true">languages.xml</modification>
		<remove-file name="$sourcedir/TopicLog.php" />
		<remove-file name="$themedir/TopicLog.template.php" />
	</uninstall>


	<install for="2.0 - 2.99.99">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<modification format="xml" type="file">install2.xml</modification>
		<modification format="xml" type="file">languages.xml</modification>
		<require-file name="TopicViewLog.php" destination="$sourcedir" />
		<code type="file">install2.php</code>
	</install>

	<uninstall for="2.0 - 2.99.99">
		<modification format="xml" type="file" reverse="true">install2.xml</modification>
		<modification format="xml" type="file" reverse="true">languages.xml</modification>
		<remove-file name="$sourcedir/TopicViewLog.php" />
	</uninstall>

</package-info>